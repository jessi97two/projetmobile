<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="6dip" android:orientation="vertical" >

    <CheckBox
        android:id="@+id/checkBoxRestaurantsSondage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="" />

    <TextView
        android:id="@+id/txtrestaurantSondage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBoxRestaurantsSondage"
        android:layout_alignBottom="@+id/checkBoxRestaurantsSondage"
        android:layout_toRightOf="@+id/checkBoxRestaurantsSondage"
        android:text="TextView" />

</RelativeLayout>